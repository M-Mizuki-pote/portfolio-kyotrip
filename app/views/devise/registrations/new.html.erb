<div class= "sign-in-page">
  <div class= "sign-in">
    <h2>新規アカウント登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class= "field">
        <p class= "required">必須</p><%= f.text_field :name, class: "sign-in-field", autofocus: true, placeholder: "ユーザー名" %>
      </div>
      <div class= "field">
        <p class= "required">必須</p><%= f.email_field :email, class: "sign-in-field", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>
      <div class= "field">
        <p class= "required">必須</p><%= f.password_field :password, class: "sign-in-field", autocomplete: "new-password", placeholder: "パスワード（6文字以上）" %>
      </div>
      <div class= "field">
        <p class= "required">必須</p><%= f.password_field :password_confirmation, class: "sign-in-field", autocomplete: "new-password", placeholder: "パスワード（確認用）"  %>
      </div>
      <div class= "actions">
        <%= f.submit "アカウント登録", class: "sign-up-btn" %>
      </div>
    <% end %>
    <div class= "actions-btn">
      <%= link_to "ログインはこちら", new_user_session_path %>
    </div>
  </div>
</div>
